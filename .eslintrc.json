{
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ]
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "overrides": [{
      "files": ["packages/*/*.js"],
      "env": {
        "es6": false
      },
      "parserOptions": {
        "ecmaVersion": 5
      }
    }]
  }
